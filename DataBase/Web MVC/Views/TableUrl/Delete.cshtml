@using DataBase.Models;
@model UrlTable
@{
    ViewData["Title"] = "Delete Url";
    Layout = null;
}

<h2>Delete URL</h2>
<p>Are you sure you want to delete the following URL?</p>

<div>
    <label>ID:</label>
    <span>@Model.Id</span>
</div>
<div>
    <label>Original URL:</label>
    <span>@Model.OriginalUrl</span>
</div>
<div>
    <label>Short URL:</label>
    <span>@Model.ShortUrl</span>
</div>
<div>
    <label>Creation Date:</label>
    <span>@Model.DateMake</span>
</div>
<div>
    <label>User ID:</label>
    <span>@Model.UserId</span>
</div>

<form method="post" action="@Url.Action("DeleteConfirmed", "TableUrl", new { urlId = Model.Id })">
    <input type="submit" value="Delete" class="btn btn-danger" />
    <a asp-controller="TableUrl" asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>